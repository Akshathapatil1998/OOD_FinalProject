<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="400.0" minWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="home.controllers.AddNewOneController">
   <children>
      <VBox prefHeight="400.0" prefWidth="500.0" spacing="10.0">
         <children>
            <Label prefHeight="45.0" prefWidth="348.0" text="Item Name">
               <font>
                  <Font size="23.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
            <TextField fx:id="fieldItemName">
               <font>
                  <Font size="23.0" />
               </font>
            </TextField>
            <Label prefHeight="45.0" prefWidth="348.0" text="Number">
               <font>
                  <Font size="23.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
            <TextField fx:id="fieldNumber">
               <font>
                  <Font size="23.0" />
               </font>
            </TextField>
            <Label prefHeight="45.0" prefWidth="404.0" text="Date">
               <font>
                  <Font size="23.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
            <DatePicker fx:id="datePicker" prefHeight="32.0" prefWidth="457.0" />
            <Label prefHeight="45.0" prefWidth="404.0" text="Category">
               <font>
                  <Font size="23.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
            <TextField fx:id="fieldCategory">
               <font>
                  <Font size="23.0" />
               </font>
            </TextField>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
               <children>
                  <Button fx:id="btnAdd" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#addOnClicks" text="ADD" textAlignment="CENTER" textOverrun="CLIP">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnCancel" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#cancelOnClicks" text="CANCEL" textAlignment="CENTER" textOverrun="CLIP">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
