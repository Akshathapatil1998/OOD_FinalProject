                  <FlowPane alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="521.0" styleClass="header-logo">
                     <children>
                        <ImageView fitHeight="84.0" fitWidth="116.0" pickOnBounds="true" preserveRatio="true" styleClass="logo-img">
                           <image>
                              <Image url="@../../../images/logo.png" />
                           </image>
                        </ImageView>
                        <Label fx:id="pageTitle" style="-fx-font-size: 25; -fx-font-weight: bold;" styleClass="logo-title" text="Credit Manager" textFill="#e5e7eb">
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </Label>
                     </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </FlowPane>
                  <Pane prefHeight="100.0" prefWidth="500.0">
                     <children>
                        <Button fx:id="btnUploadBill" layoutX="251.0" layoutY="32.0" mnemonicParsing="false" onAction="#handleButtonClicks" prefHeight="35.0" prefWidth="149.0" text="Upload Bills" />
