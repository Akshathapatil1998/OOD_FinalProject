<AnchorPane minHeight="600.0" minWidth="1000.0" stylesheets="@../css/Board.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="home.controllers.Controller">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="1000.0" styleClass="root">
         <top>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="header" BorderPane.alignment="CENTER">
