                  <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" style="-fx-alignment: center-right; -fx-spacing: 20;">
                     <children>
                        <Button fx:id="btnAddNewOne" mnemonicParsing="false" onAction="#handleButtonClicks">
                           <styleClass>
                              <String fx:value="add-btn" />
                              <String fx:value="header-btn" />
                           </styleClass>
                           <graphic>
                              <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" styleClass="header-btn">
                                 <image>
                                    <Image url="@../../../images/add.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button mnemonicParsing="false">
                           <styleClass>
                              <String fx:value="profile-btn" />
                              <String fx:value="header-btn" />
                           </styleClass>
                           <graphic>
                              <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" styleClass="header-btn">
                                 <image>
                                    <Image url="@../../../images/profile.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
               </children></HBox>
         </top>
         <left>
            <VBox prefHeight="200.0" prefWidth="200.0" style="-fx-spacing: 50px;" styleClass="sideBar" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnHome" mnemonicParsing="false" onAction="#handleButtonClicks" prefHeight="35.0" prefWidth="180.0" styleClass="sideBar-btn" text="Overview">
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../icons/overview.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="btnStat" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleButtonClicks" prefHeight="35.0" prefWidth="180.0" styleClass="sideBar-btn" text="Visualization">
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../icons/monthly.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="btnCate" layoutX="10.0" layoutY="64.0" mnemonicParsing="false" onAction="#handleButtonClicks" prefHeight="35.0" prefWidth="180.0" styleClass="sideBar-btn" text="Category">
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../icons/category.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="btnDetial" layoutX="10.0" layoutY="118.0" mnemonicParsing="false" onAction="#handleButtonClicks" prefHeight="35.0" prefWidth="180.0" styleClass="sideBar-btn" text="Transactions">
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../icons/transactions.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="btnSplit" layoutX="10.0" layoutY="172.0" mnemonicParsing="false" onAction="#handleButtonClicks" prefHeight="35.0" prefWidth="180.0" styleClass="sideBar-btn" text="Spilt Money">
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../icons/split.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="btnMarket" layoutX="25.0" layoutY="426.0" mnemonicParsing="false" onAction="#handleButtonClicks" prefHeight="35.0" prefWidth="180.0" styleClass="sideBar-btn" text="Marketplace">
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../images/marketplace.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children></VBox>
         </left>
         <bottom>
            <VBox prefHeight="30.0" prefWidth="1000.0" styleClass="footer" BorderPane.alignment="CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="footer-text" text="Copyright Â© Makka Pakka 2022" />
               </children>
            </VBox>
         </bottom>
         <center>
            <AnchorPane fx:id="HomeRoot" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</AnchorPane>
